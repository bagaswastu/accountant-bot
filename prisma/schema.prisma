generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  Income
  Expense
}

model Category {
  id          String        @id
  name        String
  type        Type
  Transaction Transaction[]
}

model Transaction {
  id          String   @id
  description String
  amount      Float
  dateTime    DateTime
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
}
