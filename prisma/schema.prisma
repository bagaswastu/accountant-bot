generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/data.db"
}

model Category {
  id     String   @id @default(uuid())
  name   String
  Detail Detail[]
}

model Detail {
  name       String @id
  categoryId String

  category Category  @relation(fields: [categoryId], references: [id])
  Expense  Expense[]
}

model Expense {
  id         String   @id @default(uuid())
  date       DateTime
  detailName String
  total      Int

  detail Detail @relation(fields: [detailName], references: [name])
}
